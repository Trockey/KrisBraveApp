@page "/login"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@inject NavigationManager Navigation

<PageTitle>Logowanie - DeveloperGoals</PageTitle>

<div class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-md w-full space-y-6">
        <div class="bg-white border border-gray-200 rounded-lg shadow-lg">
            <div class="p-8 text-center">
                <div class="mb-6">
                    <i class="bi bi-graph-up text-7xl text-primary-600"></i>
                </div>
                <h1 class="text-2xl font-bold text-gray-900 mb-3">DeveloperGoals</h1>
                <p class="text-gray-600 mb-6">
                    Inteligentna aplikacja do planowania ścieżki rozwoju programistów
                </p>

                <a href="/login/google" class="inline-flex items-center justify-center gap-2 w-full px-5 py-3 text-base font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 transition-colors">
                    <i class="bi bi-google text-lg"></i>
                    Zaloguj się przez Google
                </a>

                <div class="mt-6">
                    <p class="text-gray-500 text-sm mb-0">
                        Logując się, akceptujesz nasze warunki korzystania z usługi
                    </p>
                </div>
            </div>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg shadow-lg">
            <div class="p-6">
                <h5 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <i class="bi bi-lightbulb text-yellow-500"></i>
                    Jak to działa?
                </h5>
                <ul class="space-y-3">
                    <li class="flex items-start gap-2">
                        <i class="bi bi-check-circle text-green-500 text-lg mt-0.5"></i>
                        <span class="text-gray-700">Wypełnij swój profil (3 minuty)</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="bi bi-check-circle text-green-500 text-lg mt-0.5"></i>
                        <span class="text-gray-700">Otrzymaj rekomendacje technologii od AI</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="bi bi-check-circle text-green-500 text-lg mt-0.5"></i>
                        <span class="text-gray-700">Buduj swój graf rozwoju</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="bi bi-check-circle text-green-500 text-lg mt-0.5"></i>
                        <span class="text-gray-700">Śledź postępy w nauce</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

