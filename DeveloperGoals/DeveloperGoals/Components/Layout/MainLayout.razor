@inherits LayoutComponentBase

<div class="flex flex-col min-h-screen md:flex-row">
    <!-- Sidebar -->
    <aside class="w-full md:w-64 bg-gradient-to-b from-blue-900 to-purple-900 md:sticky md:top-0 md:h-screen">
        <NavMenu />
    </aside>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col">
        <!-- Top Bar -->
        <div class="sticky top-0 z-10 bg-gray-100 border-b border-gray-300 h-14 flex items-center justify-end px-4 md:px-8">
            <LoginDisplay />
        </div>

        <!-- Content Area -->
        <article class="flex-1 p-4 md:p-8">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 w-full bg-yellow-100 shadow-lg p-3 z-[1000] hidden">
    An unhandled error has occurred.
    <a href="." class="reload underline ml-2">Reload</a>
